{
    "name": "seen-gen-html-css-js",
    "version": "0.1.4",
    "type": "module",
    "description": "seen HMTL/CSS/JS generator",
    "files": [
        "./"
    ],
    "keywords": [
        "seen",
        "programming language",
        "compiler",
        "HTML",
        "CSS",
        "JS",
        "س",
        "لغة برمجة",
        "مترجم"
    ],
    "main": "src/main.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abukhadra/seen-gen-html-css-js.git"
    },
    "scripts": {
        "predevrelease": "npm i",
        "devreleases" : "vite build",        
        "prerelease": "npm i",
        "release": "vite build",
        "postrelease": "npm run minify && node ./lib/release/banner.js",
        "preinstall": "npm run clean-out",
        "minify": "esbuild ./dist/sgen-html-css-js.js --minify --outfile=./dist/sgen-html-css-js.js --allow-overwrite",
        "clean": "npm run clean-out && rm -rf ./node_modules && rm -rf ./package-lock.json",
        "clean-out": "rm -rf ./dist"
    },
    "author": "Mustafa Abukhadra",
    "license": "MIT",
    "homepage": "https://seenlang.org",
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.1.4",
        "esbuild": "0.24.0"
    }
}
